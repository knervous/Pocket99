<UserControl x:Class="UserInterface.Inv"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:views="clr-namespace:UserInterface"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
>

    <Canvas x:Name="InventoryCanvas" Width="1280" Height="720" Background="{DynamicResource Window_Background}">
        <views:Equipment Padding="10" />
        <views:InventorySlots x:Name="InventorySlots" Canvas.Left="903" Canvas.Top="87" />
        <Border x:Name="InventoryFloating" Width="70" Height="70" Opacity="0.7" BorderThickness="2" Visibility="Collapsed"/>

    </Canvas>



</UserControl>