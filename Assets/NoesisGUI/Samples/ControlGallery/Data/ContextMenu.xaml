<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Viewbox Margin="100">
        <GroupBox HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10">
            <Border Background="Gray" BorderBrush="#333" BorderThickness="1" CornerRadius="2" Width="300" Height="200">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Toolbars">
                            <MenuItem Header="Desktop" IsCheckable="True"/>
                            <MenuItem Header="Language Bar" IsCheckable="True"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Send to...">
                            <MenuItem Header="Compressed Folder"/>
                            <MenuItem Header="Desktop"/>
                            <MenuItem Header="Fax"/>
                            <MenuItem Header="Mail"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Task Manager"/>
                        <Separator/>
                        <MenuItem Header="Properties"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <TextBlock Text="Right click to open context menu" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>
            </Border>
        </GroupBox>
    </Viewbox>
</Grid>